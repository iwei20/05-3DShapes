# Draw each torus around the center
rotate z 60
torus 0 0 0 25 200
apply
torus 0 0 0 25 200
apply
torus 0 0 0 25 200

# Draw the center
sphere 0 0 0 50
box -28.87 28.87 28.87 57.74 57.74 57.74

# Slightly tilt the image
rotate z -120
rotate y 30
rotate x 30
move 250 250 0

apply
display
